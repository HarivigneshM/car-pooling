<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corners"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/seatInput"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/input_login_corners"
        android:backgroundTint="#3BFFFFFF"
        android:ems="10"
        android:hint="How many seats do you need?"
        android:inputType="number"
        android:paddingLeft="25sp"
        android:textColor="@color/login_primary"
        android:textColorHint="@color/login_primary"
        android:textStyle="bold" />

    <Button
        android:id="@+id/joinConfirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@drawable/button_opening"
        android:text="Join"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>
